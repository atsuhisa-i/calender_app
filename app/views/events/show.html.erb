<p id="notice"><%= notice %></p>

<div class="outer">
  <div class="header-show">【〇〇の予定】</div>

  <div class="content">
    <div class="title">すること</div>
    <div class="title__content">
      <%= @event.title %>
    </div>
    <hr class="style__line">

    <div class="detail">どんなこと</div>
    <div class="detail__content">
      <%= @event.description %>
    </div>
    <hr class="style__line">

    <div class="start">いつから</div>
    <div class="start__content">
      <%= @event.start_date.to_s(:datetime_jp) %>
    </div>
    <hr class="style__line">

    <div class="end">いつまで</div>
    <div class="end__content">
      <%= @event.end_date.to_s(:datetime_jp) %>
    </div>
    <hr class="style__line">
    
    
  </div>
  <div class="link">
      <%= link_to '編集', edit_event_path(@event) %> |
      <%= link_to 'もどる', events_path %>
    </div>
</div>