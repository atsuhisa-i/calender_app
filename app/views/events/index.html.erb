<p id="notice"><%= notice %></p>

<h1>家族の予定</h1>

<table>
  <thead>
    <tr>
      <th>すること</th>
      <th>どんなこと</th>
      <th>いつから</th>
      <th>いつまで</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.start_date.to_s(:datetime_jp) %></td>
        <td><%= event.end_date.to_s(:datetime_jp) %></td>
        <td><%= link_to '内容を見る', event %></td>
        <td><%= link_to '編集', edit_event_path(event) %></td>
        <td><%= link_to '消す', event, method: :delete, data: { confirm: '消してもいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい予定をいれる', new_event_path %>
<div id="calendar"></div>
